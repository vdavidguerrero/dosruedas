<div class="container">
  <h2>Crear Anuncio</h2>

  <%= "#{flash[:mm]}" %>

  <%= form_for :ad, url:{controller: 'ads', action: 'create'}, html:{class:"form-horizontal"}  do |f| %>


      <%= f.hidden_field(:user_id, value:session[:user_id]) %>

      <div class="form-group">
        <%= f.label(:title, "Titulo", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.text_field(:title, class:"form-control") %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label(:photo1, "Imagen", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.file_field(:photo1, class:"form-control") %>
        </div>
      </div>

        <div class="form-group">
          <%= f.label(:price, "Precio", class:"control-label col-sm-1") %>
          <div class="col-sm-2">
          <%= f.text_field(:price, class:"form-control") %>
          </div>
        </div>

      <div class="form-group">
        <%= f.label(:description, "Descripcion", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.text_area(:description, class:"form-control") %>
        </div>
      </div>

        <div class="form-group ">
              <%= f.label(:color, "Color", class:"control-label col-sm-1") %>
              <div class="col-sm-2">
                    <%= f.text_field(:color,  class:"form-control ") %>
              </div>
        </div>

      <div class="form-group ">
        <%= f.label(:engine_size, "Tamano en CC", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.text_field(:engine_size,  class:"form-control ") %>
        </div>
      </div>

      <div class="form-group ">
        <%= f.label(:year, "Ano", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.select(:year, 1990..2015) %>
        </div>
      </div>

      <div class="form-group ">
        <%= f.label(:paper_status, "Papeles", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.select(:paper_status, ["OK", "Retenido", "N/A" ]) %>
        </div>
      </div>

      <div class="form-group ">
        <%= f.label(:transmission_type, "Transmision", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.select(:transmission_type, ["Automatica", "Manual"]) %>
        </div>
      </div>

      <div class="form-group ">
        <%= f.label(:gears, "Cambios", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.select(:gears, 1..7) %>
        </div>
      </div>

      <div class="form-group ">
        <%= f.label(:cylinders, "Cilindros", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.select(:cylinders, 1..8) %>
        </div>
      </div>

      <div class="form-group ">
        <%= f.label(:strokes, "Tiempo", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
          <%= f.select(:strokes, [2,4]) %>
        </div>
      </div>


      <div class="form-group ">
        <%= f.label(:vehicle_id, "Modelo", class:"control-label col-sm-1") %>
        <div class="col-sm-2">
             <%= f.select(:vehicle_id, @vehicles.map {|c| [c.model.brand.name+","+c.model.name, c.id]}) %>
      </div>




     </div>
        <div class="form-buttons">
            <%= submit_tag("Create Section") %>
        </div>

  <% end %>
</div>
